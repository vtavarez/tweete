{
  "name": "Tweete",
  "version": "0.1.0",
  "private": true,
  "author": {
    "name": "Victor Tavarez",
    "email": "hello@victortavarez.dev",
    "url": "https://victortavarez.dev"
  },
  "build": {
    "appId": "com.electron.${name}",
    "productName": "Tweete",
    "copyright": "Copyright Â© 2019 ${author}",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "license": "GPL-3.0",
  "dependencies": {
    "@material-ui/core": "^4.2.1",
    "@material-ui/icons": "^4.2.1",
    "@material-ui/styles": "^4.2.1",
    "@mdi/js": "^3.8.95",
    "@mdi/react": "^1.2.1",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "node-localstorage": "^1.3.1",
    "oauth-electron-twitter": "^1.0.44",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-photo-gallery": "^8.0.0",
    "react-redux": "^7.1.0",
    "react-router-dom": "^5.0.1",
    "react-scripts": "3.0.1",
    "react-spring": "^8.0.27",
    "redux": "^4.0.4",
    "redux-thunk": "^2.3.0",
    "twitter-node-client": "0.0.6",
    "twitter-text": "^3.0.0",
    "typeface-roboto": "0.0.54",
    "uuid": "^3.3.2",
    "video-react": "^0.14.1"
  },
  "homepage": "./",
  "main": "public/electron.js",
  "scripts": {
    "react-start": "react-scripts start",
    "electron-dev": "DEV_URL=http://127.0.0.1:3000/ electron .",
    "start": "concurrently \"BROWSER=none npm run react-start\" \"wait-on http://127.0.0.1:3000/ && npm run electron-dev\"",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "pre-electron-pack": "npm run build",
    "electron-pack": "electron-builder build --linux snap"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^4.1.1",
    "electron": "^5.0.7",
    "electron-builder": "^21.2.0",
    "wait-on": "^3.3.0"
  }
}
